<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Product Category Form View to add Category Code -->
    <record id="view_product_category_form_inherit_category_code" model="ir.ui.view">
        <field name="name">product.category.form.inherit.category.code</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <label for="category_code" string="Category Code"/>
                <field name="category_code" string="Category Code"/>
            </xpath>
        </field>
    </record>

</odoo>
