<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Category 2 Tree View -->
    <record id="view_product_category_2_tree" model="ir.ui.view">
        <field name="name">product.category.2.tree</field>
        <field name="model">product.category.2</field>
        <field name="arch" type="xml">
            <list string="Product Categories 2">
                <field name="name"/>
                <field name="parent_id"/>
            </list>
        </field>
    </record>

    <!-- Product Category 2 Form View -->
    <record id="view_product_category_2_form" model="ir.ui.view">
        <field name="name">product.category.2.form</field>
        <field name="model">product.category.2</field>
        <field name="arch" type="xml">
            <form string="Product Category 2">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Category 2 Action -->
    <record id="action_product_category_2" model="ir.actions.act_window">
        <field name="name">Product Categories 2</field>
        <field name="res_model">product.category.2</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_product_category_2"
              name="Product Categories 2"
              parent="stock.menu_stock_config_settings"
              action="action_product_category_2"
              sequence="20"/>

    <!-- Add field to Product Template Form -->
    <record id="view_product_template_form_category_2" model="ir.ui.view">
        <field name="name">product.template.form.category.2</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="category_2_id"/>
            </field>
        </field>
    </record>
</odoo>
