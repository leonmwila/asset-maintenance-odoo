<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Template Form View to add Model field -->
    <record id="view_product_template_form_inherit_model" model="ir.ui.view">
        <field name="name">product.template.form.inherit.model</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Add Model field in General Information -->
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="model"/>
            </xpath>
        </field>
    </record>
    
    <!-- Rename Cost to Acquisition Price using terminology override -->
</odoo>
